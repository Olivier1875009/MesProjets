{% extends 'core/base.html.twig' %}

{% block body %}
	<section>
		<p class="h1 text-center mt-3 mb-4 pb-3">
			<i class="fas fa-list-check me-1"></i>
			Touts les produits
		</p>
		<hr class="mt-4">
		{% if products|length > 0 %}
			<div class="m-3 text-center">
				<a href="{{ path('admin.add.product') }}" class="btn btn-dark text-decoration-none text-white mb-3" title="Ajouter un nouveau produit">
					<i class="fas fa-plus me-2"></i>Ajouter un produit
				</a>
				<table class="table table-hover align-middle">
					<thead class="bg-warning">
						<tr>
							<th scope="col">Numéro du produit</th>
							<th scope="col">Nom</th>
							<th scope="col">Catégorie</th>
							<th scope="col">Prix</th>
							<th scope="col">Opération</th>
						</tr>
					</thead>
					<tbody>
						{% for product in products %}
							<tr>
								<td>
									<h5>{{ product.idProduct }}</h5>
								</td>
								<td>
									<h5>{{ product.name }}</h5>
								</td>
								<td>
									<h5>{{ product.categoryName.categoryName }}</h5>
								</td>
								<td>
									<h5>{{ product.price|number_format(2,',','') }}
										$</h5>
								</td>
								<td>
									<a href="{{ path('admin.modify.product', { idProduct: product.idProduct }) }}" class="text-decoration-none text-black" title="Modifier ce produit">
										<i class="fas fa-pen-to-square"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% else %}
			<p class="display-6 mt-4 text-center text-warning bg-dark rounded m-3 p-3" id="txtRaleway">L'application n'a aucun produit.</p>
			<hr class="mb-4">
		{% endif %}
	</section>
{% endblock %}
