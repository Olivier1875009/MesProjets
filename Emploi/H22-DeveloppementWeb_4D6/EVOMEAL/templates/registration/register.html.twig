{% extends 'core/base.html.twig' %}
{% form_theme registration_form 'bootstrap_5_layout.html.twig' %}

{% block body %}
	<div class="row bg-warning">
		<div class="col-lg-8 mx-auto">
			<p class="h1 text-center mt-3 mb-4 pb-3">
				<i class="fas fa-user-plus me-2"></i>
				Cr√©er mon compte
			</p>
			<hr class="mt-4">
			{% for flash in app.flashes('register')%}
				<div class="alert my-3 {{ flash.color }}">{{ flash.content }}</div>
			{% endfor %}
			{{ form_start(registration_form, {'attr': {'class': 'needs-validation-register', 'novalidate': 'novalidate' }}) }}
			{{ form_row(registration_form.email) }}
			<div class="row">
				<div class="col-6">
					{{ form_row(registration_form.firstName) }}
				</div>
				<div class="col-6">
					{{ form_row(registration_form.lastName) }}
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					{{ form_row(registration_form.password.first) }}
				</div>
				<div class="col-6">
					{{ form_row(registration_form.password.second) }}
				</div>
			</div>
			<div class="row">
				<div class="col-8">
					{{ form_row(registration_form.address) }}
				</div>
				<div class="col-4">
					{{ form_row(registration_form.city) }}
				</div>
			</div>
			<div class="row">
				<div class="col-5">
					{{ form_row(registration_form.postalCode) }}
				</div>
				<div class="col-2">
					{{ form_row(registration_form.province) }}
				</div>
				<div class="col-5">
					{{ form_row(registration_form.phoneNumber) }}
				</div>
			</div>
			<div class="d-flex justify-content-center m-3">
				{{ form_row(registration_form.create) }}
			</div>
			{{ form_end(registration_form) }}
		</div>
	</div>
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}
	<script defer src="https://cdn.jsdelivr.net/npm/jquery-mask-plugin@1.14.16/dist/jquery.mask.min.js"></script>
	<script defer src="{{ asset('scripts/registerValidation.js')}}"></script>
{% endblock %}
