<UserControl x:Class="Classes01_Corrige.OfferUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Classes01_Corrige"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200"> <!--d:DesignHeight="300" d:DesignWidth="200">-->
    <StackPanel Margin="5 0 5 10">
        <Image x:Name="OfferImage"/>
        <WrapPanel Margin="0 0 0 -5">
            <Label x:Name="PriceLabel" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Left"/>
            <Label x:Name="DateLabel" Foreground="Gray" HorizontalContentAlignment="Right"/>
        </WrapPanel>
        <WrapPanel Margin="0 0 0 -5">
            <Label x:Name="YearLabel" Foreground="White"/>
            <Label x:Name="MakerLabel" Foreground="White"/>
            <Label x:Name="BrandLabel" Foreground="White"/>
        </WrapPanel>
        <Label x:Name="MileageLabel" Foreground="Gray" FontStyle="Italic"/>
    </StackPanel>
</UserControl>
