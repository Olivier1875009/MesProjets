<Window x:Class="TP1_Base_Prof.AdministrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1_Base_Prof"
        mc:Ignorable="d"
        Title="Administration Omnivox" Height="350" Width="350">
    <StackPanel Background="DarkSlateGray">
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <Button Content="Modifier les étudiants" Template="{StaticResource ButtonBaseControlTemplate1}" Style="{StaticResource ButtonStyle}" Click="StudentButton_Click"/>
            <Button Content="Modifier les enseignants" Template="{StaticResource ButtonBaseControlTemplate1}" Style="{StaticResource ButtonStyle}" Click="TeacherButton_Click"/>
            <Button Content="Modifier les horaires"  Template="{StaticResource ButtonBaseControlTemplate1}" Style="{StaticResource ButtonStyle}" Click="ScheduleButton_Click"/>
            <Border BorderBrush="White" BorderThickness="0 0 0 2" Margin="0 0 0 -15"/>
        </StackPanel>
        <StackPanel Margin="20 10 20 20">
            <Button Content="Quitter" Template="{StaticResource ButtonBaseControlTemplate1}" Style="{StaticResource ClearButtonStyle}" Click="QuitButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
